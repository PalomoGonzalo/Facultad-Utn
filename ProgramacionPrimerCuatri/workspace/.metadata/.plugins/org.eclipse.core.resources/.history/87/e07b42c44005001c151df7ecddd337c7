	int numeroUno;
	int numeroDos;
	char letra = 'n';
	int resultado;


	while(letra!='s')
	{

			printf("ingrese numero\n");
			scanf("%d",&numeroUno);
			printf("ingrese otro numero\n");
			scanf("%d",&numeroDos);
